<Page x:Class="_3ISIP223_Nikolaeva_WPF.Pages.CreditPage4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_3ISIP223_Nikolaeva_WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreditPage4">

    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Расчёт кредита"/>
            <TextBlock Text="Стоимость автомобиля:"/>
            <TextBlock x:Name="TextBlockCarPrice"/>

            <TextBlock Text="Первоначальный взнос:"/>
            <Slider x:Name="SliderPercent" Minimum="10" Maximum="90" Value ="20" IsSnapToTickEnabled="True" ValueChanged="SliderPercent_ValueChanged"/>
            <TextBlock x:Name="TextBlockPercent" Text="20%"/>

            <TextBlock Text="Срок кредита (месяцев):"/>
            <Slider x:Name="SliderMonths" Minimum="12" Maximum="96" Value ="24" IsSnapToTickEnabled="True" ValueChanged="SliderMonths_ValueChanged"/>
            <TextBlock x:Name="TextBlockMonths" Text="36 месяцев"/>
            <TextBlock Text="Результат:"/>
            <TextBlock x:Name="TextBlockDownPayment"/>
            <TextBlock x:Name="TextBlockLoanAmount"/>
            <TextBlock x:Name="TextBlockMonthlyPayment"/>
        </StackPanel>
    </Grid>
</Page>
