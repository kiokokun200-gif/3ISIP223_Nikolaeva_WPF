<Page x:Class="_3ISIP223_Nikolaeva_WPF.Pages.ColorPage2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_3ISIP223_Nikolaeva_WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ColorPage2">

    <Grid x:Name="MainGrid" Background="White">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Цвет:"/>
            <RadioButton x:Name="RbBlack" GroupName="ColorGroup" Content="Черный" Checked="RbBlack_Checked"/>
            <RadioButton x:Name="RbBWhite" GroupName="ColorGroup" Content="Белый" Checked="RbBWhite_Checked"/>
            <RadioButton x:Name="RbPink" GroupName="ColorGroup" Content="Розови" Checked="RbPink_Checked"/>
            <TextBlock Text="Дополнительные опции:"/>
            <CheckBox x:Name="CheckBox1" Content="Кожаный салон (+50 000 ₽)" Click="CheckBox1_Click"/>
            <CheckBox x:Name="CheckBox2" Content="Панорамная крыша (+70 000 ₽)" Click="CheckBox2_Click"/>
            <CheckBox x:Name="CheckBox3" Content="Навигация (+30 000 ₽)" Click="CheckBox3_Click"/>
            <CheckBox x:Name="CheckBox4" Content="Подогрев сидений (+20 000 ₽)" Click="CheckBox4_Click"/>
        </StackPanel>
    </Grid>
</Page>
