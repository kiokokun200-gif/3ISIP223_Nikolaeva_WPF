<Page x:Class="_3ISIP223_Nikolaeva_WPF.Pages.ModelPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_3ISIP223_Nikolaeva_WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ModelPage1">
    

    <Grid Background="White">
        
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Модель:"/>
            <RadioButton GroupName="Model" Content="Renault Logan" Checked="RBMod_Checked"/>
            <RadioButton GroupName="Model" Content="Hyundai Solaris" Checked="RBMod_Checked"/>
            <RadioButton GroupName="Model" Content="Москвич" Checked="RBMod_Checked"/>
            <TextBlock Text="Тип двигателя:"/>
            <RadioButton GroupName="Engine" Content="Бензиновый" Checked="RBEngine_Checked"/>
            <RadioButton GroupName="Engine" Content="Дизельный" Checked="RBEngine_Checked"/>
            <RadioButton GroupName="Engine" Content="Газовый" Checked="RBEngine_Checked"/>
            <TextBlock x:Name="CarItog"/>
        </StackPanel>
    </Grid>
</Page>
