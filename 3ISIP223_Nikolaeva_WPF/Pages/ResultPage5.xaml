<Page x:Class="_3ISIP223_Nikolaeva_WPF.Pages.ResultPage5"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_3ISIP223_Nikolaeva_WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResultPage5">

    <Grid Background="White" Margin="20">
        <StackPanel>
            <TextBlock Text="Оформление заявки"/>
            <TextBlock Text="Итоговая сводка:" />
            <TextBlock x:Name="TextBlockSummary" />
            <TextBlock Text="Контактные данные:"/>
            <TextBlock Text="Имя:"/>
            <TextBox x:Name="TextBoxName" TextChanged="TextBoxName_TextChanged"/>
            <TextBlock Text="Телефон:"/>
            <TextBox x:Name="TextBoxPhone" PreviewTextInput ="TextBoxPhone_PreviewTextInput" TextChanged="TextBoxPhone_TextChanged"/>
            <TextBlock Text="Email:" />
            <TextBox x:Name="TextBoxEmail" TextChanged="TextBoxEmail_TextChanged"/>
        </StackPanel>
    </Grid>
</Page>
