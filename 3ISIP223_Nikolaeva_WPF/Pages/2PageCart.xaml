<Page x:Class="_3ISIP223_Nikolaeva_WPF.Pages._2PageCart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_3ISIP223_Nikolaeva_WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="_2PageCart">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row ="0">
            <Button x:Name="BtnBack" Width="120" HorizontalAlignment="Left" Content="Вернуться к товарам" Click="BtnBack_Click"/>
        </StackPanel> 
        <ListBox Grid.Row="1" x:Name="CartListBox" ScrollViewer.HorizontalScrollBarVisibility="Disabled" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <WrapPanel Orientation="Vertical">
                        <Image Source="{Binding ProductImage}" Width="100" Height="100"/>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding ProductName}"/>
                            <TextBlock Text="{Binding ProductPrice, StringFormat=Цена: {0}}"/>
                            <TextBlock Text="{Binding Quantity, StringFormat=Количество: {0}}" />
                        </StackPanel>
                    </WrapPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <StackPanel Grid.Row="2">
            <TextBlock x:Name="TxtBlkTotal" Text="Итого: "></TextBlock>
            <Button Content="Оформить заказ" Width="100" HorizontalAlignment="Left" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
